{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "automerge": false,
  "schedule": [
    "at any time"
  ],
  "timezone": "America/New_York",
  "enabledManagers": [
    "pip_requirements",
    "poetry",
    "bazelisk",
    "bazel-module",
    "github-actions"
  ],
  "includePaths": [
    "drake_pip/**",
    "drake_poetry/**",
    "drake_bazel_download/**",
    "drake_bazel_external/**",
    "**/.github/**"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "pip_requirements",
        "poetry",
        "bazelisk",
        "bazel-module",
        "github-actions"
      ],
      "rangeStrategy": "bump"
    }
  ]
}
